@model User
@{
    ViewData["Title"] = "Login Page";
}
<div class="row justify-content-center">
    <div class="col-lg-5 col-md-7" style="margin-top:100px">
        <div class="card shadow">
            <div class="card-body p-4">
                <h3 class="text-center mb-4">Login</h3>
                <form method="post" asp-controller="Home" asp-action="Login">
                    <div class="mb-3">
                        <label asp-for="Username" class="form-label">Username</label>
                        <input type="text" id="username"  asp-for="Username" class="form-control" placeholder="Username" required>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Password" class="form-label">Password</label>
                        <input type="password" id="password" asp-for="Password" class="form-control" placeholder="Password" required>
                    </div>
                    <button type="submit" class="btn btn-primary w-100">Login</button>
                </form>
                <p class="text-center text-muted mt-3">
                    Don't have an account?
                    <a asp-controller="Home" asp-action="SignUp" class="text-primary text-decoration-none">Sign Up</a>
                </p>
            </div>
        </div>
    </div>
</div>
